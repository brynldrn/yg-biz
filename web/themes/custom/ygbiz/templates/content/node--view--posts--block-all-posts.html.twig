{{ content.field_image }}
<div class="blog-caption blog-caption-bg">
	<h5>
		<a href="{{ url }}">{{ label }}</a>
	</h5>
	<p>{{ content.body }}</p>
	<div class="blog-info">
		<i class="fa fa-clock-o" aria-hidden="true"></i>
		{{ date }}
		<i class="fa fa-user" aria-hidden="true"></i>
		{{ author_name }}
	</div>
	<a href="{{ url }}" class="btn btn-infos float-right">Read More</a>
</div>
